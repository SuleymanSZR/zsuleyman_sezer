MODULE user_command_0100 INPUT.
  CASE sy-ucomm.
    WHEN '&BACK'.
      LEAVE TO SCREEN 0.
    WHEN '&EKLE'.
      go_library->kitap_ekle( ).
    WHEN '&SIL'.
      go_library->kitap_sil( ).
  ENDCASE.
ENDMODULE.
